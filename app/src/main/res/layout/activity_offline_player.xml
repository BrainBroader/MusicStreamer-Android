<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".OfflinePlayer">





    <TextView
        android:id="@+id/currentPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="0:00"
        android:textColor="#fff"
        android:textSize="10dp"
        android:layout_above="@+id/seekBar2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/songDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0:00"
        android:textSize="10dp"
        android:textColor="#fff"
        android:layout_above="@+id/seekBar2"

        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible"/>


    <Button
        android:id="@+id/pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/SoundBar"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:background="@drawable/pause"/>

    <Button
        android:id="@+id/previous"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/SoundBar"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/pause"
        android:background="@drawable/skip_previous" />

    <Button
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/pause"
        android:background="@drawable/skip_next"
        android:layout_above="@+id/SoundBar"
        android:layout_marginBottom="30dp"/>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SeekTheme"
        android:layout_above="@+id/pause"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_height="300dp"
        android:src="@drawable/album"
        android:id="@+id/cover"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/songName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="song name"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:layout_below="@+id/cover"/>

    <SeekBar
        android:id="@+id/SoundBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="50"
        android:theme="@style/SeekTheme"
        android:layout_marginBottom="50dp"/>

    <ImageView
        android:id="@+id/Quiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_volume_down"
        android:layout_toLeftOf="@+id/SoundBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"/>

    <ImageView
        android:id="@+id/bustle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_volume_up"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_toRightOf="@+id/SoundBar"/>


</RelativeLayout>